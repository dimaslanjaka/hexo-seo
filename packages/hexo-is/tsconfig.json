{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "rootDir": "./",
    "outDir": "./dist",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/node_modules/**",
    "tmp"
  ],
  "include": [
    "*.ts",
    "*.md"
  ]
}