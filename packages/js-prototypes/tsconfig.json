{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "dist/libs",
		"moduleResolution": "Node",
		"declaration": true,
		"removeComments": true,
		"allowJs": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src"
		],
		"types": [
			"node"
		],
		"target": "ES5",
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020"
		]
	},
	"include": [
		"./src"
	],
	"exclude": [
		"dist",
		"node_modules",
		"./dist/release/*.js",
		"./dist/**/*.js"
	]
}