{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "yarn build",
  "watch": [
    "./src/**/*.ts"
  ],
  "ignore": [
    "*.test.js",
    ".vscode",
    ".gitignore",
    "gh-pages",
    "**/dist/**",
    "tests",
    "**/node_modules/**",
    "test",
    "tmp",
    "temp",
    "**/tmp/**"
  ],
  "delay": 3000,
  "ext": "ts,js",
  "verbose": true
}