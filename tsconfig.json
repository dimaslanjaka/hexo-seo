/* ONLY FOR VSCODE */
{
  "compilerOptions": {
    "baseUrl": ".", // This must be specified if "paths" is.
    "allowJs": true,
    "allowUnusedLabels": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "checkJs": false,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "ES2020",
      "DOM",
      "ES2015"
    ]
  },
  "paths": {
    "@root/*": [
      "./*"
    ],
    "src/*": [
      "./src/*"
    ]
  },
  "exclude": [
    "**/node_modules/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/dist",
    "**/node_modules/**",
    "**/.git/**",
    "**/test/**"
  ]
}