/* ONLY FOR VSCODE */
{
  "compilerOptions": {
    "baseUrl": ".", // This must be specified if "paths" is.
    "allowJs": true,
    "allowUnusedLabels": true,
    "outDir": "./tmp/dist",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "declaration": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "checkJs": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "ES2015",
      "ESNext"
    ]
  },
  "paths": {
    "@root/*": [
      "./*"
    ],
    "src/*": [
      "./src/*"
    ]
  },
  "exclude": [
    "**/node_modules/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/dist/**",
    "**/node_modules/**",
    "**/.git/**",
    "**/test/**",
    "**/tmp/**",
    "./package/**/*",
    "./site/**/*",
    "./docs/**/*"
  ]
}