{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },
  "terminal.integrated.env.linux": {
    "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin:${workspaceFolder}/bin"
  },
  "terminal.integrated.env.windows": {
    "PATH": "${env:PATH};${workspaceFolder}\\node_modules\\.bin;${workspaceFolder}\\bin"
  },
  "[markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "never",
      "source.organizeImports": "never"
    }
  },
  "task.saveBeforeRun":"always",
  // task name to run on save action
  "triggerTaskOnSave.selectedTask":"build in background",
  // enable plugin
  "triggerTaskOnSave.on":true,
  // restart task when running
  "triggerTaskOnSave.restart":true,
  // delay 10s before build
  "triggerTaskOnSave.delay": 10000,
  // run in background
  "triggerTaskOnSave.showNotifications":false,
  // run in background
  "triggerTaskOnSave.showStatusBarToggle":false,
  "triggerTaskOnSave.tasks":{
    "build":[
      // watch file patterns
      "src/**/*.ts",
      "src/**/*.js"
    ]
  }
}
